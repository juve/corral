<sitecatalog xmlns="http://pegasus.isi.edu/schema/sitecatalog" version="3.0"
		xsi:schemaLocation="http://pegasus.isi.edu/schema/sitecatalog http://pegasus.isi.edu/schema/sc-3.0.xsd">

	<site handle="isi_viz" arch="x86" os="LINUX">
		
		<!-- describe  the various jobmanagers -->
		<grid type="gt2" contact="viz-login.isi.edu/jobmanager-fork" scheduler="Fork" jobtype="auxillary"/>
		<grid type="gt4" contact="https://viz-login.isi.edu:8080/grid/services/ManagedJobFactoryService" scheduler="PBS" jobtype="compute"/>
		<grid type="gt2" contact="viz-login.isi.edu/jobmanager-pbs" scheduler="PBS" jobtype="auxillary"/>
		
		<!-- describe the head node filesystem layout -->
		<head-fs>
			<scratch>
				<local>
					<file-server protocol="gsiftp" url="gsiftp://sukhna.isi.edu" mount-point="/external/local">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<file-server protocol="gsiftp" url="gsiftp://smarty.isi.edu" mount-point="/external/smarty-local">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<internal-mount-point mount-point="/local" free-size="50G" total-size="100G"/>
				</local>
				<shared>
					<file-server protocol="gsiftp" url="gsiftp://sukhna.isi.edu" mount-point="/external/shared-scratch">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<internal-mount-point mount-point="/shared-scratch" free-size="50G" total-size="100G"/>
				</shared>
			</scratch>
			<storage>
				<local>
					<file-server protocol="gsiftp" url="gsiftp://sukhna.isi.edu" mount-point="/external/local-storage">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<file-server protocol="gsiftp" url="gsiftp://smarty.isi.edu" mount-point="/external/smarty-local">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<internal-mount-point mount-point="/local-storage" free-size="50G" total-size="100G"/>
				</local>
				<shared>
					<file-server protocol="gsiftp" url="gsiftp://sukhna.isi.edu" mount-point="/external/shared-storage">
						<profile namespace="pegasus" key="transfer.arguments">-s -a</profile>
					</file-server>
					<internal-mount-point mount-point="/shared-storage" free-size="50G" total-size="100G"/>
				</shared>
			</storage>
			<profile namespace="pegasus" key="JAVA_HOME">/nfs/software/java/default</profile>
		</head-fs>
		
		<!-- describe the worker node filesystem layout -->
		<worker-fs>
			<scratch>
				<local>
					<file-server protocol="file" url="file:///" mount-point="/tmp"/>
					<internal-mount-point mount-point="/tmp" free-size="50G" total-size="100G"/>
				</local>
				<shared>
					<file-server protocol="file" url="file:///" mount-point="/external/shared-scratch"/>
					<internal-mount-point mount-point="/shared-scratch" free-size="50G" total-size="100G"/>
				</shared>
				<wshared>
					<file-server protocol="file" url="file:///" mount-point="/external/wn-shared-scratch"/>
					<internal-mount-point mount-point="/wn-shared-scratch" free-size="50G" total-size="100G"/>
				</wshared>
			</scratch>
			<storage>
				<local>
					<file-server protocol="file" url="file:///" mount-point="/tmp"/>
					<internal-mount-point mount-point="/tmp" free-size="50G" total-size="100G"/>
				</local>
				<shared>
					<file-server protocol="file" url="file:///" mount-point="/external/shared-storage"/>
					<internal-mount-point mount-point="/shared-storage" free-size="50G" total-size="100G"/>
				</shared>
				<wshared>
					<file-server protocol="file" url="file:///" mount-point="/external/wn-shared-storage"/>
					<internal-mount-point mount-point="/wn-shared-storage" free-size="50G" total-size="100G"/>
				</wshared>
			</storage>
			<profile namespace="pegasus" key="JAVA_HOME">/tmp/local/java</profile>
		</worker-fs>

		<replica-catalog type="RLS" url="rls://viz-login.isi.edu">
			<alias name="isi"/>
			<alias name="ligo_isi"/>
			<connection key="ignore.lrc">rls://sukhna.isi.edu</connection>
		</replica-catalog>
		
		<profile namespace="pegasus" key="style">gt2</profile>
		<profile namespace="env" key="PEGASUS_HOME">/nfs/home/software/pegasus</profile>
		
		<profile namespace="pegasus" key="glidein.installPath">/home/geovault-00/juve/glidein</profile>
		<profile namespace="pegasus" key="glidein.localPath">/home/geovault-00/juve/glidein/local</profile>
		<profile namespace="pegasus" key="glidein.condorVersion">7.0.0</profile>
		<!-- <profile namespace="pegasus" key="glidein.condorPackage">7.0.0-ia64-Linux-2.4-glibc2.2</profile> -->
		<profile namespace="pegasus" key="glidein.stagingService">gt2 dynamic.usc.edu/jobmanager-fork</profile>
		<profile namespace="pegasus" key="glidein.stagingService.project"></profile>
		<profile namespace="pegasus" key="glidein.stagingService.queue"></profile>
		<profile namespace="pegasus" key="glidein.glideinService">gt2 dynamic.usc.edu/jobmanager-pbs</profile>
		<profile namespace="pegasus" key="glidein.glideinService.project">nqi</profile>
		<profile namespace="pegasus" key="glidein.glideinService.queue">dque</profile>
		<profile namespace="pegasus" key="glidein.environment">_condor_CONDOR_ADMIN=juve@usc.edu</profile>
	</site>
</sitecatalog>